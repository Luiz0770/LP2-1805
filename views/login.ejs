<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Atividades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/estilos.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Lista de Atividades</h1>
        <h3 class="text-center">Login</h3>
        
        <div class="row">
            <div class="col text-center">
                <form action="" method="post">
                    <input type="email" name="email" id="" class="form-control" placeholder="Email">

                    <div class="input-group">
                        <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha"><i class="bi bi-eye-fill btn btn-dark" id="troca"></i>
                    </div>

                    <input type="submit" value="Entrar" class="btn btn-success">
                </form>

                <a href="/registro" class="btn btn-info botao">Registrar</a>
            </div>
            
        </div>
    </div>

    <script>
        var trocaTipo = document.querySelector('#troca')
        var senha = document.querySelector("#senha")

        trocaTipo.addEventListener('click',()=>{
            var tipo = senha.getAttribute("type") === "password" ?
            "text" : "password"
            senha.setAttribute("type",tipo)

            trocaTipo.classList.toggle("bi-eye-slash-fill")
        })

    </script>
</body>
</html>